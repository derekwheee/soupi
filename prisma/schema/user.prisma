model User {
    id                 String    @id
    clerkId            String    @unique
    email              String?
    name               String?
    themePreference    String?   @default("system")
    defaultHouseholdId Int?
    createdAt          DateTime  @default(now())
    updatedAt          DateTime  @updatedAt
    deletedAt          DateTime?

    // Relations
    households Household[]
}
