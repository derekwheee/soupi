{
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "lib": ["es2019", "DOM"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "typeRoots": ["./types", "./node_modules/@types"]
    },
    "include": [
        "src",
        "types/**/*.d.ts"
    ]
}
